<Window x:Class="CashGuardian.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashGuardian"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None">

    <Border Background="LightGray" BorderBrush="Black" BorderThickness="1" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="20">
                <TextBox x:Name="UsernameTextBox" Foreground="Gray" Margin="0,0,0,10" TextChanged="BoxChanged"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" PasswordChanged="BoxChanged"/>
                <Button x:Name="LoginButton" Content="Log in" Click="LoginButton_Click" IsEnabled="False" Margin="0,0,0,10"/>
            </StackPanel>

            <Button Content="Exit" HorizontalAlignment="Center" Margin="0,246,0,20" Click="ExitButton_Click" Width="60"/>
        </Grid>
    </Border>
</Window>
